<Window x:Class="ipgt_oop.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ipgt_oop"
        xmlns:controls="clr-namespace:ipgt_oop.MVVM.Views.UserControls.HomeScreen"
        xmlns:viewModel="clr-namespace:ipgt_oop.MVVM.ViewModels"
        xmlns:vm="clr-namespace:ipgt_oop.MVVM.ViewModels.UserControls.HomeScreen"
        xmlns:view="clr-namespace:ipgt_oop.MVVM.Views.UserControls.HomeScreen"
        mc:Ignorable="d"
        Title="HomeWindow" 
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Height="900"
        Width="1380">

    <Window.DataContext>
        <viewModel:HomeViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardScreenViewModel}">
            <view:DashboardScreen/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:TransferScreenViewModel}">
            <view:TransferScreen/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DepositScreenViewModel}">
            <view:DepositScreen/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:WithdrawScreenViewModel}">
            <view:WithdrawScreen/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PayServicesScreenViewModel}">
            <view:PayServicesScreen/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TransactionScreenViewModel}">
            <view:TransactionScreen/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SettingsScreenViewModel}">
            <view:SettingsScreen/>
        </DataTemplate>

    </Window.Resources>

    <Border Background="{StaticResource AppBackgroundBrush}" 
            CornerRadius="25"
            BorderThickness="1"
            BorderBrush="Black">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="382"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Grid.Row="1"
                    Background="{StaticResource SideBarBackgroundBrush}" 
                    CornerRadius="0,0,0,25">
                <controls:SideBar DataContext="{Binding SideBarViewModel}"/>
            </Border>

            <ContentControl Grid.Column="1"
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Content="{Binding CurrentView}" />


        </Grid>
        
    </Border>
</Window>
