<Window x:Class="ipgt_oop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ipgt_oop"
        xmlns:viewModel="clr-namespace:ipgt_oop.MVVM.ViewModels"
        xmlns:view="clr-namespace:ipgt_oop.MVVM.Views"
        xmlns:ucg="clr-namespace:ipgt_oop.MVVM.Views.UserControls.General"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:LoginViewModel}">
            <view:LoginView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:RegistryViewModel}">
            <view:RegistryView/>
        </DataTemplate>
    </Window.Resources>

    <Border CornerRadius="20"
            Background="White"
            Width="458"
            Height="714"
            BorderThickness="1"
            BorderBrush="{StaticResource CardBoarderBrush}">
        
        <Grid ClipToBounds="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="58"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <ContentControl Grid.RowSpan="2"
                            HorizontalAlignment="Center"
                            Content="{Binding CurrentView}"/>

            <ucg:TitleBarView Grid.Row="0"
                              HorizontalAlignment="Right"
                              x:Name="TitleBar"/>
        </Grid>
    </Border>

</Window>
