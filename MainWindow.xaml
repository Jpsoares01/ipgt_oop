<Window x:Class="ipgt_oop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ipgt_oop"
        mc:Ignorable="d"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="25"
            BorderThickness="3"
            Background="{StaticResource WindowBackgroundBrush}">

        <Border Width="350"
                Height="400"
                CornerRadius="20"
                Background="{StaticResource CardBackgroundBrush}">
            <StackPanel>
                <!-- O programa só lê SVG se instalarmos uma biblioteca (Svg.Wpf) --> 
                <Image Source="/Resources/Images/Logotipo_Bank_Colors.svg"></Image>
                
                <!-- Fonte nao funciona? -->
                <TextBlock FontFamily="\Resources\Fonts\MontSerrat\Montserrat-BlackItalic.ttf"
                           FontSize="30"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0">
                    Welcome Back
                </TextBlock>

                <TextBlock FontFamily="\Resources\Fonts\MontSerrat\Montserrat-BlackItalic.ttf"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0">
                    Enter your credencials to continue
                </TextBlock>
                
                <!-- Borda e Botões-->

                <Border Height="30"
                        Width="250"
                        CornerRadius="3"
                        Background="{StaticResource WindowBackgroundBrush}"
                        Margin="0,10,0,0">

                    <Grid>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Width="120"
                                Height="25"
                                Grid.Column="0"
                                BorderThickness="2"
                            > 
                            Manual Entery
                        </Button>
                        
                        <Button Width="120"                                
                                Height="25"
                                Grid.Column="1"
                                BorderThickness="2"
    >
                            Manual Entery
                        </Button>
                    </Grid>
                    
                </Border>

                <!-- Card Number-->

                <TextBlock Margin="20,0,0,0">
                    Card Number</TextBlock>
                

            </StackPanel>
           
        </Border>


    </Border>

</Window>
