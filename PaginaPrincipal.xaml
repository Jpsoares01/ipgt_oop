<Window x:Class="ipgt_oop.PaginaPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ipgt_oop"
        mc:Ignorable="d"
        Title="PaginaPrincipal" Height="450" Width="800">

    <Border CornerRadius="25"
        BorderThickness="3"
        Background="{StaticResource WindowBackgroundBrush}">

        <Border Width="350"
            Height="400"
            CornerRadius="20"
            Background="{StaticResource CardBackgroundBrush}">
            <StackPanel>


                <Viewbox Width="150" Height="100">
                    <Image Source="{StaticResource BankLogo}"/>
                </Viewbox>

                
                <TextBlock FontFamily="{StaticResource MontserratFont}"
                       FontSize="30"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0">
                Welcome Back
                </TextBlock>

                <TextBlock FontFamily="{StaticResource MontserratFont}"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0">
                Enter your credencials to continue
                </TextBlock>

                <!-- Borda e Botões-->

                <Border
                    CornerRadius="2"
                    Height="28"
                    Background="{StaticResource WindowBackgroundBrush}"
                    Margin="20,10,20,0">

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Width="150"
                            Height="25"
                            Grid.Column="0"
                            BorderThickness="1"
                        >
                            Manual Entery
                        </Button>

                        <Button Width="150"                                
                            Height="25"
                            Grid.Column="1"
                            BorderThickness="1"
>
                            Manual Entery
                        </Button>
                    </Grid>

                </Border>

                <!-- grid para Card Number e passs-->
                <Grid Margin="20,10,20,0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>


                    <!-- Card Number -->


                    <TextBlock
                       Grid.Row="0" >
                        Card Number</TextBlock>

                    <!-- Tive que colocar border para ficar arredondado-->
                    <Border Grid.Row="1"
                            Margin="0,10,0,0"
                            CornerRadius="5"
                            BorderBrush="Black"
                            BorderThickness="1"
                            Background="White">

                        <TextBox 
                             Height="30"
                             BorderThickness="0"
                             Background="Transparent" Text="">

                        </TextBox>

                    </Border>



                    <!-- Password -->
                    <TextBlock 
                       Margin="0,10,0,0"
                       Grid.Row="2" >
                        Password</TextBlock>

                    <!-- Tive que colocar border para ficar arredondado-->
                    <Border Grid.Row="3"
                            Margin="0,10,0,0"
                            CornerRadius="5"
                            BorderBrush="Black"
                            BorderThickness="1"
                            Background="White">

                        <TextBox 
                         Height="30"
                         BorderThickness="0"
                         Background="Transparent" Text="">

                        </TextBox>

                    </Border>

                    <!--botão sign in -->
                    
                    <!--Por alguma razão nao consigo arredondar, mas para já fica assim-->

                    <Border Grid.Row="4"
                            Margin="0,10,0,0"
                            CornerRadius="5">
                        
                        <Button 
                         Height="30"
                         Background="#4F6DB8"
                         Foreground="White"
                         >

                        Sign In</Button>
                        
                        

                    </Border>


                </Grid>
                
               


            </StackPanel>

        </Border>


    </Border>
</Window>
