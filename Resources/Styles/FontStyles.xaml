<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="MontserratFont">
        pack://application:,,,/ipgt_oop;component/Resources/Fonts/MontSerrat/#Montserrat
    </FontFamily>

    <Style x:Key="H1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MontserratFont}"/>
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="Foreground" Value="#3258A6"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="H2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MontserratFont}"/>
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="Foreground" Value="#4769AF"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="H2Black" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MontserratFont}"/>
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="Foreground" Value="#000000"/>
        <Setter Property="FontWeight" Value="Bold"/>


    </Style>
    
    <Style x:Key="H3" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MontserratFont}"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="Foreground" Value="#6582BC"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="H4" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MontserratFont}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Foreground" Value="#98ABD2"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="H5" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MontserratFont}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="#788ABF"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="H6" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MontserratFont}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#727D8C"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="BodyLarge" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MontserratFont}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#808A97"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>

    <Style x:Key="BodyRegular" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MontserratFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="#959DA9"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>

    <Style x:Key="BodySmall" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MontserratFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#B8BEC5"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>

    <Style x:Key="Caption" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MontserratFont}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#A6ABB2"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>

    <Style x:Key="Label" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MontserratFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#727D8C"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    
    <!-- Others -->
    
    <Style x:Key="BodyTextBox" TargetType="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource MontserratFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#B8BEC5"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="BodyPasswordBox" TargetType="PasswordBox">
        <Setter Property="FontFamily" Value="{StaticResource MontserratFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#B8BEC5"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>