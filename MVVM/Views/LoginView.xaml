<UserControl x:Class="ipgt_oop.MVVM.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ipgt_oop.MVVM.Views"
             xmlns:view="clr-namespace:ipgt_oop.MVVM.Views.UserControls.Login"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        
        <DataTemplate x:Key="ManualEntryTemplate">
            <view:ManualEntryForm />
        </DataTemplate>

        <DataTemplate x:Key="QuickSelectTemplate">
            <view:QuickSelectForm />
        </DataTemplate>

    </UserControl.Resources>

    <Grid>
        <Border Background="{StaticResource CardBackgroundBrush}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="225"/>
                    <RowDefinition Height="96"/>
                    <RowDefinition/>
                    <RowDefinition Height="62"/>
                </Grid.RowDefinitions>

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    
                    <Viewbox Width="162" 
                             Height="67"
                             Margin="0,24,0,0">
                        
                        <Image Source="{StaticResource BankLogo}"/>
                    </Viewbox>

                    <TextBlock Text="Welcome Back"
                               Style="{StaticResource H4}"
                               HorizontalAlignment="Center"
                               Margin="0,18,0,0"/>

                    <TextBlock Text="Enter your credentials to continue"
                               Style="{StaticResource BodyRegular}"
                               HorizontalAlignment="Center"
                               Margin="0,18,0,0"/>
                </StackPanel>

                <Border Grid.Row="1"
                        x:Name="ButtonContainer"
                        Width="410"
                        Height="56"
                        CornerRadius="12"
                        Background="#818A98">

                    <Grid>
                        <Border x:Name="SelectionIndicator"
                                Width="201"
                                Height="48"
                                CornerRadius="12"
                                Background="#4769AF"
                                HorizontalAlignment="Left"
                                Margin="4,0,4,0">

                            <Border.RenderTransform>
                                <TranslateTransform x:Name="SelectionTranslate" X="0"/>
                            </Border.RenderTransform>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Segment 1: ManuelEntry -->
                            <Button Grid.Column="0" Content="Manual Entry"
                                    x:Name="ManualEntryButton"
                                    CommandParameter="0"
                                    Tag="0"
                                    Click="SegmentButton_Click"
                                    Command="{Binding SelectSegmentCommand}"
                                    Style="{StaticResource SegmentButton}"
                                    Foreground="{StaticResource ButtonSelected}"/>

                            <!-- Segment 2: QuickSelect -->
                            <Button Grid.Column="1" Content="Quick Select"
                                    x:Name="QuickSelectButton"
                                    CommandParameter="1"
                                    Tag="1"
                                    Click="SegmentButton_Click"
                                    Command="{Binding SelectSegmentCommand}"
                                    Style="{StaticResource SegmentButton}"/>
                        </Grid>
                    </Grid>
                </Border>

                <ContentControl Grid.Row="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                    <ContentControl.Style>
                        
                        <Style TargetType="ContentControl">
                            <Setter Property="ContentTemplate"
                                    Value="{StaticResource ManualEntryTemplate}" />

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedSegment}" Value="0">
                                    <Setter Property="ContentTemplate"
                                            Value="{StaticResource ManualEntryTemplate}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SelectedSegment}" Value="1">
                                    <Setter Property="ContentTemplate"
                                            Value="{StaticResource QuickSelectTemplate}" />
                                </DataTrigger>
                            </Style.Triggers>

                        </Style>
                        
                    </ContentControl.Style>
                </ContentControl>

                <TextBlock Grid.Row="3"
                           Style="{StaticResource Caption}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    Don't have an account?
                    
                    <Hyperlink Command="{Binding DataContext.ShowRegistryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                               TextDecorations="None">
                        Create
                    </Hyperlink>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
