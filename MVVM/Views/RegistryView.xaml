<UserControl x:Class="ipgt_oop.MVVM.Views.RegistryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ipgt_oop.MVVM.Views"
             
             xmlns:vm="clr-namespace:ipgt_oop.MVVM.ViewModels"
             
             mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:RegistryViewModel />
    </UserControl.DataContext>


    <Grid>
        <Border CornerRadius="12"
                Background="{StaticResource CardBackgroundBrush}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="225"/>
                    <RowDefinition/>
                    <RowDefinition Height="62"/>
                </Grid.RowDefinitions>

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Viewbox Width="162" 
                             Height="67"
                             Margin="0,24,0,0">
                        <Image Source="{StaticResource BankLogo}"/>
                    </Viewbox>

                    <TextBlock Text="Welcome Back"
                               Style="{StaticResource H4}"
                               HorizontalAlignment="Center"
                               Margin="0,18,0,0"/>

                    <TextBlock Text="Join Bank Today"
                               Style="{StaticResource BodyRegular}"
                               HorizontalAlignment="Center"
                               Margin="0,18,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1"
                            Width="410"
                            Margin="0,18,0,0">

                    <TextBlock Text="Full Name"
                               Style="{StaticResource Caption}"/>

                    <Border CornerRadius="8"
                            BorderBrush="{StaticResource LabelBorderdBrush}"
                            BorderThickness="1"
                            Background="Transparent"
                            Width="410"
                            Height="41"
                            HorizontalAlignment="Left"
                            Margin="0,4,0,0">

                        <TextBox x:Name="Username"
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource BodyTextBox}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="4"/>
                    </Border>

                    <TextBlock Text="Choose Bank"
                               Style="{StaticResource Caption}"
                               Margin="0,18,0,0"/>

                    <ComboBox ItemsSource="{Binding BankList}"
                              DisplayMemberPath="name"
                              SelectedValue="{Binding SelectedBank}"
                              SelectedValuePath="id"
                              Grid.Row="1"
                              Width="410"
                              Height="41"
                              Margin="0,4,0,0"/>

                    <TextBlock Text="Card Number"
                               Style="{StaticResource Caption}"
                               Margin="0,18,0,0"/>

                    <Border CornerRadius="8"
                            BorderBrush="{StaticResource LabelBorderdBrush}"
                            BorderThickness="1"
                            Background="Transparent"
                            Width="410"
                            Height="41"
                            HorizontalAlignment="Left"
                            Margin="0,4,0,0">

                        <TextBox x:Name="CardNumber"
                                 Text="{Binding CardNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource BodyTextBox}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="4"/>
                    </Border>

                    <Grid HorizontalAlignment="Center"
                          Margin="0,18,0,0">

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Password"
                                   Style="{StaticResource Caption}"
                                   Margin="0,0,0,4"/>

                        <Grid Grid.Row="1">
                            <Border Grid.ColumnSpan="2"
                                    CornerRadius="8"
                                    BorderBrush="{StaticResource LabelBorderdBrush}"
                                    BorderThickness="1"
                                    Background="Transparent"
                                    Width="410"
                                    Height="41"
                                    HorizontalAlignment="Left">

                                <Grid>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="34"/>
                                    </Grid.ColumnDefinitions>

                                    <PasswordBox x:Name="Password"
                                                 Style="{StaticResource BodyPasswordBox}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Padding="4"/>

                                    <Image Grid.Column="1"
                                           Width="22"
                                           Source="{StaticResource PasswordEye}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>

                    <Button x:Name="btnRegistrySignIn"
                            Grid.Row="2"
                            Style="{StaticResource GeneralButton}"
                            Width="410"
                            Height="48"
                            Content="Sign In"
                            Margin="0,18,0,0"
                            Command="{Binding CreateClientCommand}"
                            CommandParameter="{Binding ElementName=Password}"/>

                </StackPanel>


                <TextBlock Grid.Row="3"
                           Style="{StaticResource Caption}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    
                    Already have an account?
            
            <Hyperlink Command="{Binding DataContext.ShowLoginCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                       TextDecorations="None">
                Sign In
            </Hyperlink>

                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
