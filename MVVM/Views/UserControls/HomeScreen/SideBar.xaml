<UserControl x:Class="ipgt_oop.MVVM.Views.UserControls.HomeScreen.SideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ipgt_oop.MVVM.Views.UserControls.HomeScreen"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="169"/>
            <RowDefinition Height="450"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="{StaticResource BankLogo}" Width="137" Height="57"/>

        <StackPanel Grid.Row="1">
            
            <Button Width="202"
                    Height="46"
                    Content="Button 1"
                    Style="{StaticResource SideBarButton}"
                    Margin="0,16,0,0"/>
            
            <Button Width="202" Height="46" Content="Button 2" Style="{StaticResource SideBarButton}" Margin="0,16,0,0"/>
            <Button Width="202" Height="46" Content="Button 3" Style="{StaticResource SideBarButton}" Margin="0,16,0,0"/>
            <Button Width="202" Height="46" Content="Button 4" Style="{StaticResource SideBarButton}" Margin="0,16,0,0"/>
            <Button Width="202" Height="46" Content="Button 5" Style="{StaticResource SideBarButton}" Margin="0,16,0,0"/>
            <Button Width="202" Height="46" Content="Button 6" Style="{StaticResource SideBarButton}" Margin="0,16,0,0"/>
            <Button Width="202" Height="46" Content="Button 7" Style="{StaticResource SideBarButton}" Margin="0,16,0,0"/>
        </StackPanel>
    </Grid>
    
    

</UserControl>
