<UserControl x:Class="ipgt_oop.MVVM.Views.UserControls.HomeScreen.SideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ipgt_oop.MVVM.Views.UserControls.HomeScreen"
             xmlns:viewmodel="clr-namespace:ipgt_oop.MVVM.ViewModels.UserControls.HomeScreen"
             xmlns:vg="clr-namespace:ipgt_oop.MVVM.Views.UserControls.General"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="169"/>
            <RowDefinition Height="450"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Image Source="{StaticResource BankLogo}" Width="137" Height="57"/>

        <StackPanel Grid.Row="1">

            <RadioButton Width="175"
                          Height="42"
                          Content="Dashboard"
                          Style="{StaticResource SideBarButton}"
                          Margin="0,16,0,0"
                          IsChecked="True"
                          Command="{Binding SelectCommand}"
                          CommandParameter="Dashboard"/>

            <RadioButton Width="175" Height="42" Content="Transfer" Style="{StaticResource SideBarButton}" 
                         Margin="0,16,0,0"
                         Command="{Binding SelectCommand}"
                         CommandParameter="Transfer"/>
            
            <RadioButton Width="175" Height="42" Content="Deposit" Style="{StaticResource SideBarButton}" 
                         Margin="0,16,0,0"
                         Command="{Binding SelectCommand}"
                         CommandParameter="Deposit"/>
            
            <RadioButton Width="175" Height="42" Content="Withdraw" Style="{StaticResource SideBarButton}" 
                         Margin="0,16,0,0"
                         Command="{Binding SelectCommand}"
                         CommandParameter="Withdraw"/>
            
            <RadioButton Width="175" Height="42" Content="Pay Services" Style="{StaticResource SideBarButton}" 
                         Margin="0,16,0,0"
                         Command="{Binding SelectCommand}"
                         CommandParameter="PayServices"/>
            
            <RadioButton Width="175" Height="42" Content="History" Style="{StaticResource SideBarButton}" 
                         Margin="0,16,0,0"
                         Command="{Binding SelectCommand}"
                         CommandParameter="Transaction"/>
            
            <RadioButton Width="175" Height="42" Content="Settings" Style="{StaticResource SideBarButton}" 
                         Margin="0,16,0,0"
                         Command="{Binding SelectCommand}"
                         CommandParameter="Settings"/>
        </StackPanel>



        <vg:UserBarView Grid.Row="2"
                        HorizontalAlignment="Center"
                         x:Name="UserBar"/>

        <Grid Grid.Row="3"
              Margin="0,0,0,13">

            <Button Content="Sign Out"
                    Style="{StaticResource SignOutButton}"
                    Height="46"
                    Width="179"
                    Command="{Binding OpenHomeWindowCommand}"/>

        </Grid>
        
        
    </Grid>
</UserControl>
