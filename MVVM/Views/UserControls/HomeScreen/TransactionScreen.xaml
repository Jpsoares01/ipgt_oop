<UserControl x:Class="ipgt_oop.MVVM.Views.UserControls.HomeScreen.TransactionScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ipgt_oop.MVVM.Views.UserControls.HomeScreen"
             mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="0,42,0,64">
            <TextBlock Text="Transaction History" 
                       Style="{StaticResource H2Black}" Margin="0,0,0,8"/>
            <TextBlock Text="View all your transactions" 
                       Style="{StaticResource BodyRegular}"/>
        </StackPanel>

        <Border  Grid.Row="1"
         Margin="0,0,0,16"
         Width="954"
         Height="109"
         Background ="{StaticResource CardBackgroundBrush}"
         CornerRadius="15"
         Padding="24">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">

                    <TextBlock  Text="Search"
                                Style="{StaticResource Caption}"
                                Margin="0,-13,0,0"/>

                    <Border  CornerRadius="8"
                             BorderBrush="{StaticResource LabelBorderdBrush}"
                             BorderThickness="1"
                             Width="332"
                             Height="40">


                        <Grid>

                            <Button Style="{StaticResource GeneralButton}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Height="40"
                                    Width="50"
                                    Background="Transparent"
                                    BorderBrush="Transparent">

                                <Border Width="24" Height="24">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{StaticResource SearchIcon}"/>
                                    </Border.Background>
                                </Border>

                            </Button>

                            <TextBox x:Name="TransactionTxtSearch"
                                     Style="{StaticResource BodyTextBox}"
                                     Width="280"
                                     HorizontalAlignment="Right"
                                     BorderBrush="Transparent"
                                     BorderThickness="0"/>


                        </Grid>

                    </Border>
                </Grid>

                <Grid Grid.Column="1"
                      Margin="168,0,0,0">

                    <TextBlock  Text="Period"
                                Style="{StaticResource Caption}"
                                Margin="0,-13,0,0"/>
                    <ComboBox x:Name="cmbTransactionPeriod"
                               Style="{StaticResource GeneralComboBoxStyle}"
                               Width="192"
                              Height="40">
                    </ComboBox>

                </Grid>

                <Grid Grid.Column="2"
                      Margin="22,0,0,0">

                    <TextBlock  Text="Operation Type"
                                Style="{StaticResource Caption}"
                                Margin="0,-13,0,0"/>
                    <ComboBox x:Name="cmbTransactionOperationType"
                              Style="{StaticResource GeneralComboBoxStyle}"
                              Width="192"
                              Height="40">
                    </ComboBox>

                </Grid>

            </Grid>

        </Border>




        <Grid Grid.Row="2">

            <Border>
                <Border.Clip>

                    <RectangleGeometry Rect="2,1,952,350" RadiusX="15" RadiusY="15"/>

                </Border.Clip>
                
                <ListView     ItemsSource="{Binding ListaTransacoes}" 
                                  BorderThickness="0" 
                          
                                  SelectionChanged="ListView_SelectionChanged"
                                  Margin="0,0,0,0"                                                            
                                  Height="310">
                    <ListView.View>
                        <GridView>

                            <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Descricao}"/>

                            <GridViewColumn Header="Type" DisplayMemberBinding="{Binding type}"/>

                            <GridViewColumn Header="Date; Time" DisplayMemberBinding="{Binding Data, StringFormat='MMM dd, yyyy HH:mm'}"/>

                            <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Amount}"/>

                            <GridViewColumn Header="Balance" DisplayMemberBinding="{Binding Saldo}"/>

                        </GridView>
                    </ListView.View>
                </ListView>
                
            </Border>
        </Grid>
        
        

        <Border Grid.Row="3"
              Margin="0,0,0,0"
              Background="#E9E9E9"
              Height="72"
              Width="952"
                CornerRadius="0,0,16,16">
            <Grid>
            
                        <TextBlock Text="Showing results" 
                                   Style="{StaticResource Caption}" 
                                   Margin="24,0,0,0"
                                   VerticalAlignment="Center"/>
            
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Center">
                            <Button x:Name="btnTransactionPrevious"
                                    Content="Previous" 
                                    Style="{StaticResource GeneralButton}" 
                                    Margin="0,0,17,0" 
                                    Background="#E9E9E9"
                                    Foreground="#4769AF"
                                    BorderBrush="#000000"
                                    BorderThickness="1"
                                    Height="40"
                                    Width="107"/>
                            <Button x:Name="btnTransactionNext"
                                    Content="Next" 
                                    Style="{StaticResource GeneralButton}" 
                                    Margin="0,0,24,0"
                                    BorderBrush="#000000"
                                    BorderThickness="1"
                                    Height="40"
                                    Width="66"/>
                        </StackPanel>
            </Grid>

        </Border>
   
</Grid>
        

</UserControl>