<UserControl x:Class="ipgt_oop.MVVM.Views.UserControls.HomeScreen.DashboardScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ipgt_oop.MVVM.Views.UserControls.HomeScreen"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="0,42,0,64">
            <TextBlock Text="Dashboard" 
                       Style="{StaticResource H2Black}" Margin="0,0,0,8"/>
            <TextBlock Text="Welcome back, here's your financial overview" 
                       Style="{StaticResource BodyRegular}"/>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="#0DA64F" 
                    CornerRadius="12"
                    Margin="0,0,0,46"
                    Width="954"> 
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                                    Margin="59,16,59,0">

                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="Total Balance" 
                                       Style="{StaticResource BodyRegular}"                        
                                       Foreground="#FFFFFF"/>

                            <ComboBox Style="{StaticResource GeneralComboBoxStyle}"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Width="185"/>



                        </Grid>
                        
                    
                    <!-- Text provisorio, colocar variavel. Ex: Text="{Binding Balance}" -->
                    <TextBlock Grid.Row="1"
                               Text="{Binding Balance}"
                               Style="{StaticResource H1}"
                               Margin="59,0,59,36"
                               Foreground="#FFFFFF"/>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnDashboardDeposit"
                                Grid.Column="0" 
                                Style="{StaticResource GeneralButton}" 
                                Background="#26AF61"                     
                                Margin="59,0,42,16"
                                Height ="45">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="↓"/>
                                <TextBlock Text="Deposit" 
                                           Style="{StaticResource H4}" 
                                           Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnDashboardTransfer"
                                Grid.Column="1"
                                Style="{StaticResource GeneralButton}" 
                                Background="#FFFFFF"
                                Margin="42,0,59,16"
                                Height ="45">
                            
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="➤" Foreground="#26AF61"/>
                                <TextBlock Text="Transfer" Style="{StaticResource H4}" Foreground="#26AF61"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>
            </Border>


            <Border Grid.Row="2"
                    Background="#FFFFFF"
                    Margin="0,0,0,0"
                    Height="300"
                    Width="300">
                
            </Border>
            
            
        </Grid>
    </Grid>
</UserControl>
