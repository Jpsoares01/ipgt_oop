<UserControl x:Class="ipgt_oop.MVVM.Views.UserControls.HomeScreen.DashboardScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ipgt_oop.MVVM.Views.UserControls.HomeScreen"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Dashboard" 
                       Style="{StaticResource H2Black}"
                       Margin="0,0,0,16"/>
            <TextBlock Text="Welcome back, here's your financial overview" 
                       Style="{StaticResource BodyRegular}"
                       Margin="0,0,0,16"/>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="692"/>
                <ColumnDefinition Width="238"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="#0DA64F" 
                    CornerRadius="12"
                    Margin="0,0,15,0"> 
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                    Text="Total Balance" 
                    Style="{StaticResource BodyRegular}"
                    Margin="8,0,0,16"
                    Foreground="#FFFFFF"/>
                    
                    
                    <!-- Text provisorio, colocar variavel. Ex: Text="{Binding Balance}" -->
                    <TextBlock Grid.Row="1"
                    Text="$1,504.38"
                    Style="{StaticResource H1}"
                    Margin="8,0,0,16"
                    Foreground="#FFFFFF"/>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Style="{StaticResource GeneralButton}" 
                                Background="#26AF61"                     
                                Margin="8,0,8,16"
                                Height ="45"
                                
>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="↓"/>
                                <TextBlock Text="Deposit" 
                                           Style="{StaticResource H4}" 
                                           Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2"
                                Style="{StaticResource GeneralButton}" 
                                Background="#FFFFFF"
                                Margin="8,0,8,16"
                                Height ="45">
                            
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="➤" Foreground="#26AF61"/>
                                <TextBlock Text="Transfer" Style="{StaticResource H4}" Foreground="#26AF61"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>
            </Border>


            <Border Grid.Column="1"
                    Background="#FFFFFF"
                    Margin="15,0,8,0">
                
            </Border>
            
            
        </Grid>
    </Grid>
</UserControl>
