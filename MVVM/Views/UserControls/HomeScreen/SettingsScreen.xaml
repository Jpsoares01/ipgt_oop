<UserControl x:Class="ipgt_oop.MVVM.Views.UserControls.HomeScreen.SettingsScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ipgt_oop.MVVM.Views.UserControls.HomeScreen"
             mc:Ignorable="d" >
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Margin="24,42,0,64"
                        Width="1380">
                <TextBlock Text="Settings" 
                   Style="{StaticResource H2Black}" Margin="0,0,0,8"/>
                <TextBlock Text="Menage yout account preferences" 
                   Style="{StaticResource BodyRegular}"/>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="24,0,0,64">

                <Ellipse Width="69"
                         Height="69">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding UserProfileImage}"
                                    Stretch="UniformToFill">
                            
                        </ImageBrush>
                    </Ellipse.Fill>
                    
                </Ellipse>

                <TextBlock Text="{Binding UserName}"
                           Style="{StaticResource H6}"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"/>

            </StackPanel>

            <StackPanel Grid.Row="2"
                        HorizontalAlignment="Left"
                        Margin="24,0,0,0">

                <Button x:Name="btnSettingsCreateCard"
                        Click="OpenPopupNewCard_click"
                        Content="Create New Card"
                        Style="{StaticResource GeneralButton}"
                        Margin="0,0,0,24"
                        Height="48"
                        Width="314"/>

                <Button x:Name="btnSettingsChangePass"
                        Click="OpenPopup_click"
                        Content="Change Password"
                        Style="{StaticResource GeneralButton}"
                        Margin="0,0,0,24"
                        Height="48"
                        Width="314"/>

                <Button x:Name="btnSettingsDeleteAccount"
                        Click="OpenPopupDeleteAccount_click"
                        Content="Delete Account"
                        Style="{StaticResource GeneralButton}"
                        Margin="0,0,0,0"
                        Height="48"
                        Width="314"
                        Background="#F22D1B"/>
                



            </StackPanel>

        </Grid>
    </Grid>
</UserControl>
