<UserControl x:Class="ipgt_oop.MVVM.Views.UserControls.HomeScreen.PayServicesScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ipgt_oop.MVVM.Views.UserControls.HomeScreen"
             mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
            Margin="0,42,0,64">
            <TextBlock Text="Pay Services" 
               Style="{StaticResource H2Black}" Margin="0,0,0,8"/>
            <TextBlock Text="Pay your bills and services" 
               Style="{StaticResource BodyRegular}"/>
        </StackPanel>

        <StackPanel Grid.Row="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>


                <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource ServicesButton}">

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                        <Border Width="64" Height="64" CornerRadius="20" >
                            <Border.Background>
                                <ImageBrush ImageSource="{StaticResource ElectricityIcon}"/>
                            </Border.Background>
                        </Border>

                        <TextBlock Text="Electricity" 
                                   Style="{StaticResource H3}"
                                   Margin="0,13,0,0"/>
                    </StackPanel>

                </Button>

                <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource ServicesButton}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                        <Border Width="64" Height="64" CornerRadius="20" >
                            <Border.Background>
                                <ImageBrush ImageSource="{StaticResource WaterIcon}"/>
                            </Border.Background>
                        </Border>

                        <TextBlock Text="Water" 
               Style="{StaticResource H3}"
               Margin="0,13,0,0"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource ServicesButton}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                        <Border Width="64" Height="64" CornerRadius="20" >
                            <Border.Background>
                                <ImageBrush ImageSource="{StaticResource InternetIcon}"/>
                            </Border.Background>
                        </Border>

                        <TextBlock Text="Internet" 
               Style="{StaticResource H3}"
               Margin="0,13,0,0"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="0" Grid.Column="3" Style="{StaticResource ServicesButton}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                        <Border Width="64" Height="64" CornerRadius="20" >
                            <Border.Background>
                                <ImageBrush ImageSource="{StaticResource PhoneIcon}"/>
                            </Border.Background>
                        </Border>

                        <TextBlock Text="Phone" 
                                   Style="{StaticResource H3}"
                                   Margin="0,13,0,0"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource ServicesButton}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                        <Border Width="64" Height="64" CornerRadius="20" >
                            <Border.Background>
                                <ImageBrush ImageSource="{StaticResource GasIcon}"/>
                            </Border.Background>
                        </Border>

                        <TextBlock Text="Gas" 
               Style="{StaticResource H3}"
               Margin="0,13,0,0"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource ServicesButton}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                        <Border Width="64" Height="64" CornerRadius="20" >
                            <Border.Background>
                                <ImageBrush ImageSource="{StaticResource InsuranceIcon}"/>
                            </Border.Background>
                        </Border>

                        <TextBlock Text="Insurance" 
               Style="{StaticResource H3}"
               Margin="0,13,0,0"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ServicesButton}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                        <Border Width="64" Height="64" CornerRadius="20" >
                            <Border.Background>
                                <ImageBrush ImageSource="{StaticResource TvIcon}"/>
                            </Border.Background>
                        </Border>

                        <TextBlock Text="Tv" 
               Style="{StaticResource H3}"
               Margin="0,13,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="1" Grid.Column="3" Style="{StaticResource ServicesButton}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                        <Border Width="64" Height="64" CornerRadius="20" >
                            <Border.Background>
                                <ImageBrush ImageSource="{StaticResource OtherServicesIcon}"/>
                            </Border.Background>
                        </Border>

                        <TextBlock Text="Other" 
               Style="{StaticResource H3}"
               Margin="0,13,0,0"/>
                    </StackPanel>
                </Button>




            </Grid>
            
        </StackPanel>


    </Grid>
</UserControl>
