<UserControl x:Class="ipgt_oop.MVVM.Views.UserControls.HomeScreen.DepositScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ipgt_oop.MVVM.Views.UserControls.HomeScreen"
             mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="0,42,0,64">
            <TextBlock Text="Deposit Funds" 
                       Style="{StaticResource H2Black}" Margin="0,0,0,8"/>
            <TextBlock Text="Add money to your account" 
                       Style="{StaticResource BodyRegular}"/>
        </StackPanel>

        <Border  Grid.Row="1"
                 Margin="0,0,0,0"
                 Width="954"
                 Height="369"
                 Background ="{StaticResource CardBackgroundBrush}"
                 CornerRadius="15"
                 Padding="32">

            <StackPanel>
                <TextBlock  Text="Select Card" 
                            Style="{StaticResource Caption}"
                            Margin="0,0,0,4"/>
                
                <ComboBox ItemsSource="{Binding ListaCartoes}"
                          DisplayMemberPath="number"
                          SelectedItem="{Binding SelectedCard}"
                          Style="{StaticResource GeneralComboBoxStyle}"
                          Margin="0,0,0,32"
                          Width="890">
                </ComboBox>


                <TextBlock Text="Amount to Deposit" 
                           Style="{StaticResource Caption}"
                           Margin="0,0,0,4"/>

                <Border  CornerRadius="8"
                         BorderBrush="{StaticResource LabelBorderdBrush}"
                         BorderThickness="1"
                         Background="Transparent"
                         Width="890"
                         Height="41"
                         HorizontalAlignment="Left"
                         Margin="0,0,0,10">

                    <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                             x:Name="AmountDeposit"
                             Style="{StaticResource BodyTextBox}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="4"/>


                </Border>


                <TextBlock HorizontalAlignment="Right"
                           Margin="0,32,0,32"
                           Style="{StaticResource Caption}">
                    <TextBlock.Text>
                        <Binding Path="SaldoDisponivel" StringFormat="Available: {0:N2}" />
                    </TextBlock.Text>
                </TextBlock>

                <Button x:Name="btnConfirmDeposit"
                        Style="{StaticResource GeneralButton}"
                        Height="48"
                        Width="890"
                        HorizontalAlignment="Left"
                        Content="Confirm Deposit"
                        Command="{Binding DepositCommand}"/>

            </StackPanel>


        </Border>

    </Grid>
</UserControl>