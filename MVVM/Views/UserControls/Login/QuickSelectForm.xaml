<UserControl x:Class="ipgt_oop.MVVM.Views.UserControls.Login.QuickSelectForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ipgt_oop.MVVM.Views.UserControls.Login"
             mc:Ignorable="d">
    <Grid>
        <Border Height="220"
                Width="458">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                      Margin="0,0,0,0">

                    <TextBlock Text="Card Number"
                               Style="{StaticResource Caption}"
                               Margin="24,0,0,0"/>

                    <ComboBox Width="410"
                              Height="41"/>
                    
                </Grid>

                <Grid Grid.Row="1"
                      Margin="24,0,0,0">

                    <TextBlock Text="Password"
                               Style="{StaticResource Caption}"/>


                    <Border CornerRadius="8"
                        BorderBrush="#B9BEC6"
                        BorderThickness="1"
                        Background="Transparent"
                        Width="410"
                        Height="41"
                        HorizontalAlignment="Left"
                        Margin="0,4,0,0">

                        <TextBox x:Name="PasswordTextBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="4"/>
                    </Border>
                </Grid>

                <Button Grid.Row="2"
                        Style="{StaticResource GeneralButton}"
                        Width="410"
                        Height="48"
                        Content="Sign In"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
