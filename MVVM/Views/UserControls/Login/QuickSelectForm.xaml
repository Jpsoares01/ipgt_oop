<UserControl x:Class="ipgt_oop.MVVM.Views.UserControls.Login.QuickSelectForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ipgt_oop.MVVM.Views.UserControls.Login"
             mc:Ignorable="d">
    
    <StackPanel>

        <Grid HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Username"
                       Style="{StaticResource Caption}"
                       Margin="0,0,0,4"/>


            <ComboBox Grid.Row="1"
                      Width="410"
                      Height="41"
                      ItemsSource="{Binding SavedUsers}" 
                      Style="{StaticResource GeneralComboBoxStyle}"
                      SelectedItem="{Binding SelectedUser}"/>
        </Grid>

        <Grid HorizontalAlignment="Center"
              Margin="0,18,0,18">
            
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Password"
                       Style="{StaticResource Caption}"
                       Margin="0,0,0,4"/>

            <Grid Grid.Row="1">
                <Border Grid.ColumnSpan="2"
                        CornerRadius="8"
                        BorderBrush="{StaticResource LabelBorderdBrush}"
                        BorderThickness="1"
                        Background="Transparent"
                        Width="410"
                        Height="41"
                        HorizontalAlignment="Left">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="34"/>
                        </Grid.ColumnDefinitions>

                        <!-- PasswordBox-->
                        <PasswordBox x:Name="QuickPassBox" 
                                     PasswordChanged="QuickPassBox_PasswordChanged"
                                     Style="{StaticResource BodyPasswordBox}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="4"
                                     Visibility="Visible"/>

                        <!-- TextBox-->

                        <TextBox x:Name="PasswordTextBox"
                                 Style="{StaticResource BodyTextBox}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="4"
                                 Visibility="Collapsed"/>

                        <Button Grid.Column="1" 
                                Background="Transparent"
                                BorderThickness="0"
                                Click="TogglePassword_Click">

                            <Image x:Name="PasswordButtonImage"
                                   Width="22"
                                   Source="{StaticResource PasswordEyeCrossed}"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <Button Style="{StaticResource GeneralButton}"
                Width="410"
                Height="48"
                Content="Sign In"
                Command="{Binding QuickLoginCommand}"/>

    </StackPanel>
</UserControl>
