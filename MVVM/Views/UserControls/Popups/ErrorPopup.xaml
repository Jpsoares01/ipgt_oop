<Window x:Class="ipgt_oop.MVVM.Views.UserControls.Popups.ErrorPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ErrorPopup"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

<Border Background="#80000000">

    <Border Width="314" Height="295"
            Background="{StaticResource CardBackgroundBrush}" 
            CornerRadius="15"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
        <StackPanel VerticalAlignment="Center">

            <Border Width="62" 
                        Height="62" 
                        CornerRadius="15"
                        Background="#F8968D"
                        Margin="0,0,0,16">

            </Border>

            <TextBlock Text="Error!"
                        Style="{StaticResource H2Black}"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,4"/>

            <TextBlock Text="Amount Incorrect!"
                        Style="{StaticResource BodyRegular}"
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                        Margin="0,0,0,24"/>

            <Button Content="Back Dashboard"
                    Style="{StaticResource GeneralButton}"
                    Width="242"
                    Height="48"/>

        </StackPanel>
    </Border>
</Border>
</Window>
