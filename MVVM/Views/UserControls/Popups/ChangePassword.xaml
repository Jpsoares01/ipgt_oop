<Window x:Class="ipgt_oop.MVVM.Views.UserControls.Popups.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ipgt_oop.MVVM.Views.UserControls.Popups"
        mc:Ignorable="d"
        Title="ChangePasswordPopup"
        WindowStyle="None"
        Height="530" Width="458">
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="225"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Grid.Row="0">

            <Viewbox Width="162" 
                  Height="67"
                  Margin="0,24,0,0">
                <Image Source="{StaticResource BankLogo}"/>
            </Viewbox>

            <TextBlock Text="Change Password"
                    Style="{StaticResource H4}"
                    HorizontalAlignment="Center"
                    Margin="0,18,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <StackPanel HorizontalAlignment="Center">

                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Username"
                               Style="{StaticResource Caption}"
                               Margin="0,0,0,4"/>

                    <Border Grid.Row="1"
                            CornerRadius="8"
                            BorderBrush="{StaticResource LabelBorderdBrush}"
                            BorderThickness="1"
                            Background="Transparent"
                            Width="410"
                            Height="41"
                            HorizontalAlignment="Left">

                        <TextBox x:Name="CardNumber"
                                 Style="{StaticResource BodyTextBox}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="4"/>

                    </Border>
                </Grid>

                <Grid HorizontalAlignment="Center"
                      Margin="0,18,0,18">

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Password"
                               Style="{StaticResource Caption}"
                               Margin="0,0,0,4"/>

                    <Grid Grid.Row="1">
                        <Border Grid.ColumnSpan="2"
                                CornerRadius="8"
                                BorderBrush="{StaticResource LabelBorderdBrush}"
                                BorderThickness="1"
                                Background="Transparent"
                                Width="410"
                                Height="41"
                                HorizontalAlignment="Left">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="34"/>
                                </Grid.ColumnDefinitions>

                                <!-- PasswordBox-->
                                <PasswordBox x:Name="PasswordBox"
                                             Style="{StaticResource BodyPasswordBox}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Padding="4"
                                             Visibility="Visible"/>

                                <!-- TextBox-->

                                <TextBox x:Name="PasswordTextBox"
                                         Style="{StaticResource BodyTextBox}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="4"
                                         Visibility="Collapsed"/>

                                <Button Grid.Column="1" 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="TogglePassword_Click">

                                    <Image x:Name="PasswordButtonImage"
                                           Width="22"
                                           Source="{StaticResource PasswordEyeCrossed}"/>
                                </Button>

                            </Grid>
                        </Border>
                    </Grid>
                </Grid>


                <Grid HorizontalAlignment="Center"
                      Margin="0,0,0,18">

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Password"
                               Style="{StaticResource Caption}"
                               Margin="0,0,0,4"/>

                    <Grid Grid.Row="1">
                        <Border Grid.ColumnSpan="2"
                                CornerRadius="8"
                                BorderBrush="{StaticResource LabelBorderdBrush}"
                                BorderThickness="1"
                                Background="Transparent"
                                Width="410"
                                Height="41"
                                HorizontalAlignment="Left">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="34"/>
                                </Grid.ColumnDefinitions>

                                <!-- PasswordBox-->
                                <PasswordBox x:Name="ConfPasswordBox"
                                             Style="{StaticResource BodyPasswordBox}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Padding="4"
                                             Visibility="Visible"/>

                                <!-- TextBox-->

                                <TextBox x:Name="ConfPasswordTextBox"
                                         Style="{StaticResource BodyTextBox}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="4"
                                         Visibility="Collapsed"/>

                                <Button Grid.Column="1" 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="ToggleConfPassword_Click">

                                    <Image x:Name="ConfPasswordButtonImage"
                                           Width="22"
                                           Source="{StaticResource PasswordEyeCrossed}"/>
                                </Button>

                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="18"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>


                    <Button Grid.Column="0"
                         Style="{StaticResource GeneralButton}"
                         Width="193"
                         Height="48"
                         Content="Back"
                         Command="{Binding OpenHomeWindowCommand}"
                         Click="BtnBack_Click"/>

                    <Button Grid.Column="2"
                         Style="{StaticResource GeneralButton}"
                         Width="193"
                         Height="48"
                         Content="Update Password"
                         Command="{Binding OpenHomeWindowCommand}"/>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
   
</Window>
