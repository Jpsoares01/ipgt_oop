<Window x:Class="ipgt_oop.MVVM.Views.UserControls.Popups.DeleteAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ipgt_oop.MVVM.Views.UserControls.Popups"
        mc:Ignorable="d"
        Title="ErrorPopup"                
        WindowStyle="None"
        Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="225"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.Row="0">

            <Viewbox Width="162" 
                     Height="67"
                     Margin="0,24,0,0">
                <Image Source="{StaticResource BankLogo}"/>
            </Viewbox>

            <TextBlock Text="Delete Account"
                       Style="{StaticResource H4}"
                       HorizontalAlignment="Center"
                       Margin="0,18,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <StackPanel>

                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Username"
                               Style="{StaticResource Caption}"
                               Margin="0,0,0,4"/>

                    <Border Grid.Row="1"
                            CornerRadius="8"
                            BorderBrush="{StaticResource LabelBorderdBrush}"
                            BorderThickness="1"
                            Background="Transparent"
                            Width="410"
                            Height="41"
                            HorizontalAlignment="Left">
                        <TextBox x:Name="CardNumber"
                                 Style="{StaticResource BodyTextBox}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="4"/>
                    </Border>
                </Grid>

                <Grid HorizontalAlignment="Center"
                      Margin="0,18,0,18">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Password"
                               Style="{StaticResource Caption}"
                               Margin="0,0,0,4"/>

                    <Grid Grid.Row="1">
                        <Border Grid.ColumnSpan="2"
                                CornerRadius="8"
                                BorderBrush="{StaticResource LabelBorderdBrush}"
                                BorderThickness="1"
                                Background="Transparent"
                                Width="410"
                                Height="41"
                                HorizontalAlignment="Left">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="34"/>
                                </Grid.ColumnDefinitions>

                                <PasswordBox x:Name="Password"
                                             Style="{StaticResource BodyPasswordBox}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Padding="4"/>

                                <Button Grid.Column="1"
                                        Background="Transparent"
                                        BorderThickness="0">

                                    <Image Width="22"
                                           Source="{StaticResource PasswordEye}"/>

                                </Button>


                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
                
                
                <TextBlock Grid.Row="0" 
                           Text="Password"
                           Style="{StaticResource Caption}"
                           Margin="0,0,0,4"/>
                
                <Grid HorizontalAlignment="Center" 
                      Margin="0,0,0,18">

                    
                    
                    <Border CornerRadius="8"
                            BorderBrush="{StaticResource LabelBorderdBrush}"
                            BorderThickness="1"
                            Background="Transparent"
                            Width="410"
                            Height="41"
                            HorizontalAlignment="Left">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="34"/>
                            </Grid.ColumnDefinitions>

                            <PasswordBox x:Name="Password2"
                                         Style="{StaticResource BodyPasswordBox}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="4"/>

                            <Button Grid.Column="1"
                                    Background="Transparent"
                                    BorderThickness="0">

                                <Image Width="22"
                                 Source="{StaticResource PasswordEye}"/>

                            </Button>
                        </Grid>
                    </Border>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="18"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>


                    <Button Grid.Column="0"
                            Style="{StaticResource GeneralButton}"
                            Width="193"
                            Height="48"
                            Content="Back"
                            Command="{Binding OpenHomeWindowCommand}"/>

                    <Button Grid.Column="2"
                            Style="{StaticResource GeneralButton}"
                            Width="193"
                            Height="48"
                            Content="Delete Account"
                            Command="{Binding OpenHomeWindowCommand}"/>

                </Grid>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
