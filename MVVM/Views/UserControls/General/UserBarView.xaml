<UserControl x:Class="ipgt_oop.MVVM.Views.UserControls.General.UserBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ipgt_oop.MVVM.Views.UserControls.General"
             mc:Ignorable="d">
    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Ellipse Grid.Column="0"
                     Width="69"
                     Height="69"
                     StrokeThickness="1"
                     Stroke="{StaticResource CardBoarderBrush}">
                <Ellipse.Fill>
                    
                    <ImageBrush ImageSource="{StaticResource BankLogo}"
                                Stretch="UniformToFill"/>
                    
                </Ellipse.Fill>
            </Ellipse>

            <TextBlock Grid.Column="1"
                       VerticalAlignment="Center"
                       Margin="5,0,0,0"
                       Style="{StaticResource H6}"
                       Text="joasjdo"/>
        </Grid>

    </Border>
</UserControl>
